<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryLight"
    tools:context=".LoginActivity">

    <!-- USERNAME -->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:id="@+id/name_icon"
        android:background="#dddddd"
        android:src="@drawable/ic_person_black_24dp"
        android:tint="#eeeeee" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_icon"
        android:layout_alignTop="@+id/name_icon"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/name_icon"
        android:paddingLeft="8dp"
        android:id="@+id/name_input_field"
        android:background="#ffffff"
        android:hint="@string/name_hint"
        android:singleLine="true" />


    <!-- USERNAME -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/name_icon"
        android:layout_alignRight="@+id/name_icon"
        android:layout_alignLeft="@+id/name_icon"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:id="@+id/username_icon"
        android:background="#dddddd"
        android:src="@drawable/ic_supervisor_account_black_24dp"
        android:tint="#eeeeee" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/username_icon"
        android:layout_alignTop="@+id/username_icon"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/username_icon"
        android:paddingLeft="8dp"
        android:id="@+id/username_input_field"
        android:background="#ffffff"
        android:hint="@string/username_hint"
        android:singleLine="true" />


    <!-- PASSWORD -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/username_icon"
        android:layout_alignRight="@+id/username_icon"
        android:layout_alignLeft="@+id/username_icon"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:id="@+id/password_icon"
        android:background="#dddddd"
        android:src="@android:drawable/ic_lock_idle_lock"
        android:tint="#eeeeee"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password_icon"
        android:layout_alignTop="@+id/password_icon"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/password_icon"
        android:paddingLeft="8dp"
        android:id="@+id/password_input_field"
        android:background="#ffffff"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:singleLine="true" />


    <!-- RE-TYPE PASSWORD -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/password_icon"
        android:layout_alignRight="@+id/password_icon"
        android:layout_alignLeft="@+id/password_icon"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:id="@+id/retype_password_icon"
        android:background="#dddddd"
        android:src="@android:drawable/ic_lock_idle_lock"
        android:tint="#eeeeee" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/retype_password_icon"
        android:layout_alignTop="@+id/retype_password_icon"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/retype_password_icon"
        android:paddingLeft="8dp"
        android:id="@+id/retype_password_input_field"
        android:background="#ffffff"
        android:hint="@string/retype_password_hint"
        android:inputType="textPassword"
        android:singleLine="true" />


    <!-- EMAIL -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/retype_password_icon"
        android:layout_alignRight="@+id/retype_password_icon"
        android:layout_alignLeft="@+id/retype_password_icon"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:id="@+id/email_icon"
        android:background="#dddddd"
        android:src="@drawable/ic_email_black_24dp"
        android:tint="#eeeeee" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email_icon"
        android:layout_alignTop="@+id/email_icon"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/email_icon"
        android:paddingLeft="8dp"
        android:id="@+id/email_input_field"
        android:background="#ffffff"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:singleLine="true" />


    <!-- REGISTER -->


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_input_field"
        android:layout_marginTop="5dp"
        android:padding="25dp"
        android:id="@+id/sign_up_button"
        android:backgroundTint="@color/colorButton"
        android:textColor="@android:color/white"
        android:text="@string/sign_up_button_text" />

</RelativeLayout>