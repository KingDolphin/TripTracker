<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/trip_name_text"
        android:text="@string/default_trip_text"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textSize="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_name_text"
        android:id="@+id/trip_creator_text"
        android:text="@string/default_trip_creator_text" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/trip_edit_button"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>