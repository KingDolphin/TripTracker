<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/colorButtonLight" >

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/trip_icon"
        android:src="@drawable/ic_public_black_24dp"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:contentDescription="@string/trip_icon_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/trip_icon"
        android:layout_alignBottom="@+id/trip_icon"
        android:layout_alignTop="@+id/trip_icon"
        android:layout_alignEnd="@+id/trip_edit_button"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/trip_name_text"
        android:text="@string/default_trip_text"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textSize="26sp"
        android:focusableInTouchMode="false"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_icon"
        android:layout_alignStart="@+id/trip_icon"
        android:id="@+id/trip_creator_text"
        android:text="@string/default_trip_creator_text"
        android:textIsSelectable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/trip_edit_button"
        android:background="#00000000"
        android:src="@drawable/ic_arrow_drop_down_black_24dp"
        android:contentDescription="@string/trip_dropdown_icon_desc" />

</RelativeLayout>